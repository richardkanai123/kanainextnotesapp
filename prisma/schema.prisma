generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Notes {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  content    String
  writer     String
  date       DateTime
  isPinned   Boolean
  sharedWith String[] @default([])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  category   String
}

model Users {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  username   String
  externalid String
  email      String
}
